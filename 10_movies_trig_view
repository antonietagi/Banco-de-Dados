-- Criar a tabela genres
CREATE TABLE genres (
id INT PRIMARY KEY,
description VARCHAR(255)
);

-- Inserir dados na tabela genres
INSERT INTO genres (id, description)
VALUES
(1, 'Animation'),
(2, 'Horror'),
(3, 'Action'),

(4, 'Drama'),
(5, 'Comedy');

-- Criar a tabela movies
CREATE TABLE movies (
id INT PRIMARY KEY,
name VARCHAR(255),
id_genres INT,
FOREIGN KEY (id_genres) REFERENCES genres(id)
);

-- Inserir dados na tabela movies
INSERT INTO movies (id, name, id_genres)
VALUES
(1, 'Batman', 3),
(2, 'The Battle of the Dark River', 3),
(3, 'White Duck', 1),
(4, 'Breaking Barriers', 4),
(5, 'The Two Hours', 2);

CREATE VIEW nome_id_action AS
SELECT movies.id AS codigo_filme , movies.name AS nome_filme
FROM movies
JOIN genres ON movies.id_genres = genres.id
WHERE genres.description = 'Action';

DELIMITER $$

CREATE TRIGGER nome_trigger
BEFORE INSERT ON movies
FOR EACH ROW
BEGIN
    IF NEW.name = '' THEN
        SET NEW.name = 'Sem nome';
    END IF;
END $$

DELIMITER ;

